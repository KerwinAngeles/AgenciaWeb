---
export interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Una agencia de marketing digital innovadora que ofrece servicios de branding, SEO, redes sociales y desarrollo web."
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO meta data -->
    <title>AngelEstudio - Impulsa tu negocio en redes sociales</title>
    <meta name="description" content="AngelEstudio ayuda a pequeños negocios a destacar en redes sociales con diseño y desarrollo web, publicidad efectiva en Facebook e Instagram, SEO en Google y gestión de redes sociales.">
    <meta name="keywords" content="marketing digital, redes sociales, SEO, diseño web, desarrollo web, publicidad en Facebook, publicidad en Instagram, manejo de redes sociales">
    <meta name="author" content="Angelestudio">
    <meta name="robots" content="index, follow">
    <meta property="og:title" content="AngelEstudio - Impulsa tu negocio en redes sociales">
    <meta property="og:description" content="Maximiza tu presencia en línea con AngelEstudio. Ofrecemos diseño y desarrollo web, publicidad en redes sociales, SEO y más.">
    <meta property="og:url" content="https://angelestudio.vercel.app/">
    <meta property="og:type" content="website">

    <!-- Fuentes y estilos. -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">
  </head>
  <body class="bg-light">
    <slot />
    
    <script is:inline src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script is:inline>
      // Initialize AOS animation library
      document.addEventListener('DOMContentLoaded', () => {
        AOS.init({
          duration: 800,
          easing: 'ease-in-out',
          once: true
        });
      });
    </script>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    font-family: 'Poppins', sans-serif;
  }

  .gradient-text {
    background: linear-gradient(90deg, #6C63FF 0%, #FF6584 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .gradient-bg {
    background: linear-gradient(135deg, #6C63FF 0%, #FF6584 100%);
  }

  .card-hover {
    transition: all 0.3s ease;
  }
  
  .card-hover:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
</style>